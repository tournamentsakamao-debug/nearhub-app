# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (MySQL)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=nearhub_db
DB_PORT=3306

# JWT Secret (Generate strong key)
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long_very_important
JWT_EXPIRE=30d

# Payment Details (UPDATE WITH YOUR DETAILS)
UPI_ID=yourname@paytm
PAYMENT_QR_CODE_PATH=/uploads/qr-code.png

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS (Allow all in development, specific domain in production)
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Location
DEFAULT_SEARCH_RADIUS_KM=5
MAX_SEARCH_RADIUS_KM=20

# Google Sign-In (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_here

# Admin Credentials (CHANGE IMMEDIATELY!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@nearhub.com
